<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="onl.deepspace.wgs.RepresentationFragment">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/card_margin"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            card_view:cardElevation="4dp">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="20sp"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/card_margin"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/today"
                    android:textSize="20sp"/>

                <TableLayout
                    android:id="@+id/representationsToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:stretchColumns="4">

                    <TableRow
                        android:background="@color/darkergrey"
                        android:gravity="center"
                        android:weightSum="4">

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/lesson"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/subject"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/teacher"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/room"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/noToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/noRepresentation"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/card_margin"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            card_view:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateTomorrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/tomorrow"
                    android:textSize="20sp"/>

                <TableLayout
                    android:id="@+id/representationsTomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:stretchColumns="4">

                    <TableRow
                        android:background="@color/darkergrey"
                        android:gravity="center"
                        android:weightSum="4">

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/lesson"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/subject"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/teacher"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/room"
                            android:textAllCaps="true"
                            android:textStyle="bold"/>
                    </TableRow>
                </TableLayout>

                <TextView
                    android:id="@+id/noTomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/noRepresentation"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="8dp"
            android:textColor="#aaa"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/representations_disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_marginTop="30dp"
            android:paddingBottom="@dimen/padding_disclaimers"
            android:text="@string/portal_representations_disclaimer"
            android:textColor="#aaa"
            android:textSize="13sp"/>

    </LinearLayout>
</ScrollView>
